#include <iostream>
using namespace std;
int main() {
    double a,b;
    char op;
    cout<<"Insert Number one = ";
    cin>>a;
    cout<<"Insert an operator(+,-,*,/) = ";
    cin>>op;
    cout<<"Insert Number two = ";
    cin>>b;
switch (op) {
    case '+':
      cout<<"Result = "<<a+b<<endl;
     break;
    case '-':
      cout<<"Result = "<<a-b<<endl;
     break;
    case '*':
      cout<<"Result = "<<a*b<<endl;
     break;
    case '/':
      if (b!=0)
        cout<<"Result = "<<a/b<<endl;
      else
        cout<<"Error:Division by zero"<<endl;
      break;
    default:
        cout<<"Error:Invalid operator"<<endl;
      break;
    return 0;
  }
}
